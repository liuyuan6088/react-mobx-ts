{
  "compilerOptions": {
      "strictNullChecks": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "jsx": "preserve",
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "target": "es6",
      "lib": [
          "dom", 
          "es7"
      ],
      "baseUrl": ".",
      "paths": {
        "@components/*": ["./src/components/*"],
        "@container/*": ["./src/container/*"],
        "@utils/*": ["./src/utils"],
        "@stories/*": ["./src/stories"]
      },
  },
  "exclude": [
      "node_modules",
      "lib",
      "es"
  ]
}
